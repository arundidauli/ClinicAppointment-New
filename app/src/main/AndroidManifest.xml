<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.com.FindYourLecturer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="example.com.FindYourLecturer.application.app.LandingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.LoginActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.InfoActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.NewBookingActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.UpcomingAppointmentActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.PassAppointmentActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.DoctorActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.GetHelpActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.AdminPanelActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.EditAppointmentActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.EditNewsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.EditDoctorActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.StatusAppointmentActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.UpdateNewsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="example.com.FindYourLecturer.application.app.UpdateDoctorActivity"
            android:screenOrientation="portrait">
        </activity>

        <service android:name="example.com.FindYourLecturer.application.fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>